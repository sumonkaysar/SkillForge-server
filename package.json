{
  "name": "skillforge-server",
  "version": "1.0.0",
  "description": "Backend server for comprehensive full-stack portfolio platform. Handles API endpoints for project showcases, skills management, blog CMS, resume builder data, and user authentication. Built with Node.js and Express for robust performance and scalability.",
  "main": "index.js",
  "author": "SK",
  "license": "MIT",
  "scripts": {
    "start": "node ./dist/server.js",
    "dev": "ts-node-dev --respawn --transpile-only ./src/server.ts",
    "migrate": "bunx prisma migrate dev",
    "build": "tsc",
    "lint": "bunx eslint ./src"
  },
  "dependencies": {
    "@prisma/client": "^6.16.3",
    "bcrypt": "^6.0.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "express": "^5.1.0",
    "http-status-codes": "^2.3.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.16.5",
    "zod": "^4.0.10"
  },
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "@types/bcrypt": "^6.0.0",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^24.5.2",
    "eslint": "^9.36.0",
    "prisma": "^6.16.2",
    "ts-node-dev": "^2.0.0",
    "tsx": "^4.20.6",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.44.1"
  }
}
